{
    "name": "jersyfi/laravel-localization",
    "description": "A package to localize a laravel application",
    "keywords": [
        "jersyfi",
        "laravel-localization",
        "laravel",
        "localization",
        "locale",
        "multilangual"
    ],
    "homepage": "https://github.com/jersyfi/laravel-localization",
    "license": "MIT",
    "authors": [
        {
            "name": "Jérôme Bastian Winkel",
            "email": "thejersyy@gmail.com",
            "homepage": "https://jersyfi.de"
        }
    ],
    "require": {
        "php" : "^7.2|^8.0",
        "laravel/framework": "^8.0"
    },
    "suggest": {
        "spatie/laravel-translatable": "Required to use the Translatable Page(^4.0)."
    },
    "autoload": {
        "psr-4": {
            "Jersyfi\\Localization\\": "src"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Jersyfi\\Localization\\LocalizationServiceProvider"
            ],
            "aliases": {
                "Localization": "Jersyfi\\Localization\\Facades\\Localization"
            }
        }
    }
}
